<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/fragment_background"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/weather_info_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/restaurants_btn"
        android:alpha="0.6"
        android:textColor="#000"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/weather_info_day"
        android:layout_marginStart="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_info_location"
        android:alpha="0.7"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weather_info_description"
        android:layout_alignStart="@id/weather_info_day"
        android:alpha="0.7"
        android:layout_below="@id/weather_info_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/restaurants_btn"
        android:text="popular restaurants"
        android:textSize="12sp"
        android:textColor="#fff"
        android:padding="5dp"
        android:background="@drawable/round"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/weather_info_image"
            android:src="@drawable/partlycloudy"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/weather_info_temperature"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:alpha="0.6"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#000"
                android:textSize="85sp" />
            <TextView
                android:id="@+id/temp_unit_label"
                android:text="Â°C"
                android:layout_marginTop="28dp"
                android:layout_marginStart="5dp"
                android:textSize="23sp"
                android:textColor="#000"
                android:alpha="0.6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/weather_info_precipitation"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="28sp"
                    android:textColor="#111"
                    android:alpha="0.6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/prec_unit_label"
                    android:text="%"
                    android:layout_marginStart="3dp"
                    android:textSize="14sp"
                    android:textColor="#111"
                    android:alpha="0.6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/prec_label"
                android:text="Precipitation"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/weather_info_humidity"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="28sp"
                    android:textColor="#111"
                    android:alpha="0.6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/humidity_unit_label"
                    android:text="%"
                    android:layout_marginStart="3dp"
                    android:textSize="14sp"
                    android:textColor="#111"
                    android:alpha="0.6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/humidity_label"
                android:text="Humidity"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/weather_info_wind"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="28sp"
                    android:textColor="#111"
                    android:alpha="0.6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/wind_unit_label"
                    android:text="Km/h"
                    android:layout_marginStart="3dp"
                    android:textSize="14sp"
                    android:textColor="#111"
                    android:alpha="0.6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/wind_label"
                android:text="Wind"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>